{% if note is defined and note.id is defined %}
    {% set title = 'Edit Note' %}
    {% set mode = 'edit' %}
    {% set submit_icon = 'edit' %}
{% else %}
    {% set title = 'Create Note' %}
    {% set mode = 'create' %}
    {% set submit_icon = 'document' %}
{% endif %}

{% extends "default.html.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block notification %}
    {% if error is defined %}
        {% set icon = "close" %}
    {% endif %}
    {% if message is defined %}
        {% set icon = "check" %}
    {% endif %}
    {% if error != "" or message != "" %}
        <div class="bg-linear-to-r from-neutral-50 to-neutral-100 px-8 py-6 text-center border-2 border-neutral-200 opacity-90 items-center rounded-2xl shadow-lg absolute right-5 top-5 flex flex-row gap-x-5 animate-fade-out" style="animation-iteration-count: 1; animation-duration: 2s; animation-fill-mode: forwards; animation-delay: 3s;">
            <img src="/images/{{ icon }}.png" class="w-12" alt="">
            <div class="text-left">
                <p class="font-semibold mb-0">App Notification</p>
                <p class="mb-0 mt-1">{{ error is defined ? error : message }}</p>
            </div>
        </div>
    {% endif %}
    {{ dump() }}
{% endblock %}

{% block content %}
    <hr class="">
    <section class="my-6">
        {% if mode == 'create' %}
            <h2>Create a note</h2>
        {% else %}
            <h2>Update note</h2>
        {% endif %}
        <div class="flex flex-row md:gap-x-8 mt-8">
            <div class="quick-guide">
                <h3>Quick guide</h3>
                {% if mode == 'create' %}
                    <p>
                        It doesn't take much to create a note. Just add a title and a body, click "<i>Create a note</i>"
                        and you're done. If you don't to set a date, it will default to the current date.
                    </p>
                {% endif %}
                <p>
                    All fields are required, unless marked as optional.
                    And, the <em>body</em> field supports <a href="https://markdownguide.org"
                                                             class="bare"
                                                             target="_blank">Markdown formatting</a>.
                </p>
            </div>
            <form action="/manage{% if mode == 'edit' %}/{{ note.id }}{% endif %}"
                  method="post"
                  name="form-manage-note">
                <div>
                    <label for="title">Title:</label>
                    <input type="text"
                           id="title"
                           name="title"
                           value="{% if note is defined %}{{ note.title }}{% endif %}"
                           required>
                </div>
                <div>
                    <div class="flex flex-row place-content-between">
                        <label for="body">Body:</label>
                        <p class="field-info">
                            <a href="https://markdownguide.org"
                               target="_blank"
                               class="bare">Markdown formatting</a> is supported.
                        </p>
                    </div>
                    <textarea name="body"
                              id="body"
                              required
                              rows="5">{% if note is defined %}{{ note.body }}{% endif %}</textarea>
                </div>
                <div>
                    <label for="category">Category:</label>
                    <select id="category"
                            name="category">
                        <option value="education"
                                {% if note is defined and note.category == 'education' %}
                                    selected="selected"
                                {% endif %}>
                            Education
                        </option>
                        <option value="politics"
                                {% if note is defined and note.category == 'politics' %}
                                    selected="selected"
                                {% endif %}>
                            Politics
                        </option>
                        <option value="sport"
                                {% if note is defined and note.category == 'sport' %}
                                    selected="selected"
                                {% endif %}>
                            Sport
                        </option>
                    </select>
                </div>
                <div>
                    <label for="created">Date created (optional):</label>
                    <input type="date"
                           id="created"
                           value="{% if note is defined %}{{ note.created }}{% endif %}"
                           name="created">
                </div>
                <div class="controls">
                    {% if mode == 'edit' %}
                        <input type="hidden" name="id" value="{{ note.id }}">
                    {% endif %}
                    <button name="submit"
                            id="create-note"
                            class="button {{ mode }}">
                        <img
                             src="/images/white/{{ submit_icon }}.png"
                             alt="">
                        {% if mode == "edit" %} Update {% else %} Create {% endif %} note
                    </button>
                    <a href="/"
                       class="button"
                       id="cancel-create-new-note">Cancel</a>
                </div>
            </form>
        </div>
    </section>
{% endblock %}
